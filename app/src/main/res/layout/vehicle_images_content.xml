<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!-- RC -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardElevation="8dp"
            app:cardCornerRadius="5dp"
            android:background="#fff"
            android:layout_height="wrap_content"
            android:minHeight="200dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rc_progress"
                    android:elevation="8dp"
                    android:visibility="invisible"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:id="@+id/doc_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="@android:color/holo_red_dark"
                    android:text="*Registration Copy (RC)*"/>
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_add_vehicle_docs"
                    android:layout_below="@id/doc_name1"
                    android:id="@+id/rc_image"/>
                <Button
                    android:id="@+id/save_rc"
                    android:layout_width="wrap_content"
                    android:text="Save"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/rc_image"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
        <!-- INVOICE -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="5dp"
            android:background="#fff"
            android:layout_height="wrap_content"
            android:minHeight="200dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="8dp"
                    android:id="@+id/invoice_progress"
                    android:visibility="invisible"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:id="@+id/doc_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Invoice"/>
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_add_vehicle_docs"
                    android:layout_below="@id/doc_name2"
                    android:id="@+id/invoice_image"/>
                <Button
                    android:id="@+id/save_invoice"
                    android:layout_width="wrap_content"
                    android:text="Save"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/invoice_image"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!-- INSURANCE -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="5dp"
            android:background="#fff"
            android:layout_height="wrap_content"
            android:minHeight="200dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="8dp"
                    android:id="@+id/insurance_progress"
                    android:visibility="invisible"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:id="@+id/doc_name3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Insurance"/>
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_add_vehicle_docs"
                    android:layout_below="@id/doc_name3"
                    android:id="@+id/insurance_image"/>
                <Button
                    android:id="@+id/save_insurance"
                    android:layout_width="wrap_content"
                    android:text="Save"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/insurance_image"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
        <!-- VFRONT -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="5dp"
            android:background="#fff"
            android:layout_height="wrap_content"
            android:minHeight="200dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/vfront_progress"
                    android:elevation="8dp"
                    android:visibility="invisible"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:id="@+id/doc_name4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Vehicle Front Photo"/>
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:src="@drawable/ic_add_vehicle_docs"
                    android:layout_height="120dp"
                    android:layout_below="@id/doc_name4"
                    android:id="@+id/vfront_image"/>
                <Button
                    android:id="@+id/save_vfront"
                    android:layout_width="wrap_content"
                    android:text="Save"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/vfront_image"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!-- VBACK -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="5dp"
            android:background="#fff"
            android:layout_height="wrap_content"
            android:minHeight="200dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ProgressBar
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:elevation="8dp"
                    android:id="@+id/vback_progress"
                    android:visibility="invisible"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:id="@+id/doc_name5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Vehicle Rear photo"/>
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_add_vehicle_docs"
                    android:layout_below="@id/doc_name5"
                    android:id="@+id/vback_image"/>
                <Button
                    android:id="@+id/save_vback"
                    android:layout_width="wrap_content"
                    android:text="Save"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/vback_image"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
        <!-- VSIDE -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="5dp"
            android:background="#fff"
            android:layout_height="wrap_content"
            android:minHeight="200dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/vside_progress"
                    android:elevation="8dp"
                    android:visibility="invisible"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:id="@+id/doc_name6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Vehicle Side photo"/>
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:src="@drawable/ic_add_vehicle_docs"
                    android:layout_height="120dp"
                    android:layout_below="@id/doc_name6"
                    android:id="@+id/vside_image"/>
                <Button
                    android:id="@+id/save_vside"
                    android:layout_width="wrap_content"
                    android:text="Save"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/vside_image"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
  </LinearLayout>