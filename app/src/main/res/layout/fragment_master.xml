<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".owner.ui.vcategories.MasterFragment">
    <ProgressBar
        android:id="@+id/master_progress"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:elevation="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Select Master Category"/>
    <Spinner
        android:id="@+id/avcategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:layout_below="@id/txt1"/>
    <TextView
        android:id="@+id/txt2"
        android:layout_below="@id/avcategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Select Vehicle Type"/>
    <Spinner
        android:id="@+id/avsubcategoery1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:layout_below="@id/txt2"/>
    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/avsubcategoery1"
        android:text="Select Vehicle Model"/>
    <Spinner
        android:id="@+id/avsubcategoery2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:layout_below="@id/txt3"/>

    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/avsubcategoery2"
        android:layout_margin="10dp"
        android:text="Next"/>

</RelativeLayout>