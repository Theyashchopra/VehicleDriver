<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">
    <TextView
        android:id="@+id/dtimecard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>
    <TextView
        android:id="@+id/daddresscard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/dtimecard"
        android:layout_alignParentStart="true"/>
    <TextView
        android:id="@+id/dcontactcard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/daddresscard"
        android:layout_alignParentStart="true"
        />
    <Button
        android:id="@+id/ddirectionscard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_directions"
        android:text="Directions"
        android:background="@color/colorAccent"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/dcontactcard"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@android:color/background_dark"
        android:layout_below="@+id/ddirectionscard"/>
</RelativeLayout>