<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f5"
    tools:context=".owner.ui.gallery.OwnerRcVehicleFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"
            android:id="@+id/head_text"
            android:text="Try to add image directly from camera for optimal uploads"/>
    <include
        android:layout_below="@id/head_text"
        android:id="@+id/add_images"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/vehicle_images_content"/>
    <Button
        android:id="@+id/rcdone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:layout_below="@id/add_images"
        android:background="@drawable/background_accent"
        android:layout_margin="8dp"
        android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</ScrollView>