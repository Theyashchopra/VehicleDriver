<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#f5f5f5"
    android:layout_height="match_parent"
    tools:context=".Driver.ui.home.DriverHomeFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:elevation="8dp"
            android:id="@+id/progress" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".Driver.ui.home.DriverHomeFragment">

            <TextView
                android:id="@+id/youare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You are now "
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:layout_constraintEnd_toStartOf="@id/statustxt"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/statustxt"
                app:layout_constraintBottom_toBottomOf="@id/statustxt"/>

            <TextView
                android:id="@+id/statustxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Offline"
                android:textColor="@android:color/holo_red_dark"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toStartOf="@id/statusview"
                app:layout_constraintStart_toEndOf="@id/youare"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/statsbutton"/>

            <View
                android:id="@+id/statusview"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@android:color/holo_red_dark"
                android:layout_margin="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/statustxt"
                app:layout_constraintTop_toTopOf="@id/statustxt"
                app:layout_constraintBottom_toBottomOf="@id/statustxt"/>

            <Button
                android:id="@+id/statsbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_red"
                android:text="OFFLINE"
                android:textColor="@android:color/white"
                android:layout_margin="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/statustxt"
                app:layout_constraintBottom_toTopOf="@id/busytxt"/>
            <TextView
                android:id="@+id/youare2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You are "
                app:layout_constraintEnd_toStartOf="@id/busytxt"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/busytxt"
                app:layout_constraintBottom_toBottomOf="@id/busytxt"/>

            <TextView
                android:id="@+id/busytxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Busy"
                android:textColor="@android:color/holo_orange_light"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toStartOf="@id/busyview"
                app:layout_constraintStart_toEndOf="@id/youare2"
                app:layout_constraintTop_toBottomOf="@id/statsbutton"
                app:layout_constraintBottom_toTopOf="@id/busybutton"/>

            <View
                android:id="@+id/busyview"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@android:color/holo_orange_light"
                android:layout_margin="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/busytxt"
                app:layout_constraintTop_toTopOf="@id/busytxt"
                app:layout_constraintBottom_toBottomOf="@id/busytxt"/>

            <Button
                android:id="@+id/busybutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Busy"
                android:textColor="@android:color/white"
                android:background="@drawable/background_orange"
                android:layout_margin="8dp"
                app:layout_constraintTop_toBottomOf="@id/busytxt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_up"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"/>
        <TextView
            android:id="@+id/appt_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Swipe up to see all appointments"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dhomerecycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="true"
            tools:listitem="@layout/driver_card_home"/>
    </LinearLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>